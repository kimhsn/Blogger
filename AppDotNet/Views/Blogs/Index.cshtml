@model IEnumerable<AppDotNet.Entities.Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container cards mt-5 mb-5">
    <div class="row row-custum ">
    @foreach (var item in Model) {
        <div class="col-md-3 col-sm-6 card-custum">
            <div class="card card-block">
                <img src="https://static.pexels.com/photos/7096/people-woman-coffee-meeting.jpg" alt="Photo of sunset">
                    <h5 class="card-title mt-2"> @Html.DisplayFor(modelItem => item.Name)</h5>
                    <span class="card-title  mb-1">crée le @Html.DisplayFor(modelItem => item.CreatedTimestamp)</span>
                    @{
                        if (item.Prive)
                        {
                             <i class="fa-solid fa-lock"></i>
                 
                        }
                        else
                        {
                            <i class="fa-solid fa-earth-africa"></i>
                        }
                    }
                    <div class="interaction">
                        <form asp-controller="Blogs" action="/blogs/delete/@Html.DisplayFor(modelItem => item.ID)" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </form>
                        <i class="fa-solid fa-pen-to-square"></i>
                        

                    </div>
            </div>
        </div>
    }
</div>
</div>
<div>
    <i class="fa-regular fa-square-plus"></i>
</div>

<div class="modal fade show-pop-up" id="modalLoginAvatar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog cascading-modal modal-avatar modal-sm" role="document">
    <!--Content-->
    <div class="modal-content">

      <!--Header-->
      <div class="modal-header">
        <img src="https://mdbootstrap.com/img/Photos/Avatars/img%20%281%29.webp" alt="avatar" class="rounded-circle img-responsive">
      </div>
      <!--Body-->
      <div class="modal-body text-center mb-1">

        <h5 class="mt-1 mb-2">Ajouter un blog</h5>
         <form asp-controller="Blogs" action="/blogs/create" method="post">
             @Html.AntiForgeryToken()
             <div class="md-form ml-0 mr-0">
                        <label data-error="wrong" data-success="right"  class="ml-0">Nom du blog</label>
                        <input type="text" type="text" asp-validation-for="Name" class="form-control form-control-sm validate ml-0">
                  
            </div>
            <div class="md-form ml-0 mr-0">
                 <label data-error="wrong" data-success="right"  class="ml-0">Privé</label>
                 <input type="checkbox" asp-for="Prive" class="mt-2">
            </div>
            <div type="submit" class="text-center mt-4">
              <button class="btn btn-cyan mt-1">Ajouter </button>
            </div>
         </form>
       
      </div>

    </div>
    <!--/.Content-->
  </div>
</div>